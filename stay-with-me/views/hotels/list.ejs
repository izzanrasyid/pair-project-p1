<%- include('../partials/header.ejs', {title: 'List of Hotels'}) %>
    <a href="/hotels/add" class="btn btn-primary" <%=admin ? '' : 'hidden' %> >Add a hotel</a>
    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Facilty</th>
                <th scope="col">Location</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Admin</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(el => { %>
                <tr>
                    <td>
                        <%= el.name %>
                    </td>
                    <td><img src="<%= el.url %>" alt="Cover" width="200px" height="300px"></td>
                    <% const facility = el.facility.substring(1, el.facility.length-1).split(',') %>
                        <td>
                            <ul class="list-group">
                                <% facility.forEach (element => { %>
                                    <li class="list-group-item">
                                        <%= element %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </td>
                        <td>
                            <%= el.location %>
                        </td>
                        <td>
                            <%= el.admin.fullName() %>
                        </td>
                        <td>
                            <a class="btn btn-primary" href="/hotels/<%= el.id %>/edit" <%=admin && el.status===n ull ? '' : 'hidden' %>>Edit</a>
                            <a class="btn btn-danger" href="/hotels/<%= el.id %>/delete" onclick="return confirm('are you sure you want to delete this hotel ?')" <%=a uthor && el.status===n ull ? '' : 'hidden' %>>Delete</a>
                            <% if (el.status === 'booked') { %>
                                <a class="btn btn-info">This Hotel Is Booked</a>
                                <% } else { %>
                                    <a class="btn btn-info" href="/users/<%= username %>/<%= el.id %>" <%=admin ? 'hidden' : '' %> >Booking</a>
                                    <% } %>
                        </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    </body>

    </html>